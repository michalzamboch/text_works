<UserControl x:Class="UI.UserControls.DiacriticsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="25"/>
            <RowDefinition MinHeight="100" Height="40*"/>
            <RowDefinition MinHeight="25" />
            <RowDefinition MinHeight="100" Height="40*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" FontWeight="Bold">Input:</Label>

        <TextBox
            Name="TextWithDiacritics"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            VerticalScrollBarVisibility="Visible"
            TextChanged="TextWithDiacritics_TextChanged"
            Height="Auto"
            Width="Auto"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Grid.Row="1"/>

        <Label Grid.Row="2" FontWeight="Bold">Result:</Label>

        <TextBox
            Name="TextWithoutDiacritics"
            Grid.Row="3"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            VerticalScrollBarVisibility="Visible"
            IsReadOnly="True"
            Height="Auto"
            Width="Auto"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"/>

        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            Margin="0 5"
            Grid.Row="4">
            <Button 
                x:Name="ClearButton"
                Padding="15 0 15 0"
                Margin="0 0 5 0"
                Click="ClearButton_Click">
                Clear
            </Button>
            
            <Button 
                x:Name="CopyButton"
                Padding="15 0 15 0"
                Margin="0 0 5 0"
                Click="CopyButton_Click">
                Copy
            </Button>
            
            <Button 
                x:Name="LoadButton"
                Padding="15 0 15 0"
                Margin="0 0 5 0"
                Click="LoadButton_Click">
                Load
            </Button>
            
            <Button 
                x:Name="SaveButton"
                Padding="15 0 15 0"
                Margin="0 0 5 0"
                Click="SaveButton_Click">
                Save
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
